<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Post</title>
        <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
        <script src="assets/share.js" type="text/javascript"></script>
        <link rel="stylesheet" href="styles/post.css" />
    </head>
    <body>
        <form id="share-post">
            <div class="container" id="title-box">
                <input placeholder="Title" id="title" type="text" />
            </div>
            <div class="container" id="description-box">
                <textarea placeholder="Description" id="description" type="text"></textarea>
            </div>
            <div id="options">
                <div class="container" id="pin-profile-box">
                    <input id="pin-profile" type="checkbox" />
                    <label for="pin-profile"><span class="checkbox"></span> Pin Profile</label>
                </div>
                <div id="submit-box">
                    <button type="submit">Share</button>
                </div>
            </div>
        </form>

        <ul class="feed">
            <% for (var i = 0; i < posts.length; i++) { %>
            <li>
                <div class="post">
                    <h2><%= posts[i].title %></h2>
                    <p><%= posts[i].description %></p>
                </div>
            </li>
            <% } %>
        </ul>
    </body>
</html>